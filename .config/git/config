[alias]
	co = checkout
	dt = difftool
	fm = fetch --verbose origin master:master
	ln = log --name-status
	mm = merge --verbose master
	st = status
	stl = stash list
	stp = stash pop
	sts = stash save --include-untracked
[core]
	autocrlf = input
[diff]
	noprefix = true
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[pull]
	ff = only
[push]
	default = simple
