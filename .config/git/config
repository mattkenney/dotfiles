[alias]
  br = branch
  co = checkout
  dt = difftool
  ln = log --name-status
  st = status
  stl = stash list
  stp = stash pop
  sts = stash save
  sub = submodule update --init
[core]
  autocrlf = input
[diff]
  noprefix = true
  tool = vimdiff
[difftool]
  prompt = false
[init]
  defaultBranch = main
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  path = nvim
  prompt = false
[pull]
  ff = only
[push]
  default = simple
