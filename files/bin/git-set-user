#!/bin/sh

set_git_config() {
    display_name="${1}"
    var_name="${2}"

    default_value=$(git config "${var_name}")

    if [ -n "${default_value}" ]; then
        printf "%s [%s]: " "${display_name}" "${default_value}"
    else
        printf "%s: " "${display_name}"
    fi

    IFS= read value
    if [ -z "${value}" ]; then
        value="${default_value}"
    fi

    GIT_CONFIG_GLOBAL=~/.gitconfig git config --global "${var_name}" "${value}"
}

set_git_config "Git user name" user.name
set_git_config "Git user email" user.email
